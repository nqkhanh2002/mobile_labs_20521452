<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".Custom_Grid_View">
    <TextView
        android:id="@+id/t1"
        android:layout_width="170dp"
        android:layout_height="160dp"
        android:padding="7dp"
        android:text="He'd have you all unravel at the"
        android:background="@color/blue_800"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/t2"
        android:layout_width="170dp"
        android:layout_height="160dp"
        android:padding="7dp"
        android:text="Heed not the rabble"
        android:background="@color/blue_600"
        app:layout_constraintLeft_toRightOf="@+id/t1"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/t3"
        android:layout_width="170dp"
        android:layout_height="160dp"
        android:layout_marginTop="10dp"
        android:padding="7dp"
        android:text="Sounds of the screams but the"
        app:layout_constraintTop_toBottomOf="@+id/t1"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/blue_400"
        tools:ignore="MissingConstraints"/>
    <TextView
        android:id="@+id/t4"
        android:layout_width="170dp"
        android:layout_height="160dp"
        android:layout_marginTop="10dp"
        android:padding="7dp"
        android:text="Who scream"
        app:layout_constraintLeft_toRightOf="@+id/t3"
        app:layout_constraintTop_toBottomOf="@+id/t2"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/blue_200"
        tools:ignore="MissingConstraints"/>
</androidx.constraintlayout.widget.ConstraintLayout>


